{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "rootDir": "./src",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "noImplicitAny": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node"
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
